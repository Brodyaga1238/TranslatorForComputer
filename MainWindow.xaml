<Window x:Name="TranslateWindow" x:Class="TranslatorForComputer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TranslatorForComputer"
        Title="TsW" Height="460" Width="650" Background="#36393F" Icon="/5166.png" WindowStartupLocation="CenterScreen">
    <Grid  Background="#FF1C1F1E">
        <TextBox x:Name="TranslateBox" Foreground="White"  FontSize="18"  Margin="68,10,68,0" Cursor="Arrow" Background="#FF292A2B" TextChanged="TranslateBox_TextChanged" VerticalAlignment="Top" Height="177"  >
        </TextBox>
        <TextBox x:Name="ResultBox" Foreground="White"  FontSize="18" Margin="68,222,68,0" Cursor="Arrow" Background="#FF292A2B"  IsReadOnly="True" VerticalAlignment="Top" Height="178" Grid.RowSpan="2" RenderTransformOrigin="0.5,0.5" />
    </Grid>
</Window>
